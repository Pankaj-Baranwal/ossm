@require 'frontend'

body.error
  background url('{!static!}/img/rad/rad-one.gif')
  background-size auto 100%
  main
    background alpha(#000, 0.8)
    color $white
    display flex
    > div
      margin auto
    h2
      font-size 4em
      line-height 1.5
      margin 0 0 30px
      text-transform uppercase
      small
        display block
        font-size 1.5rem
    p
      max-width 300px
      font-family $type-mono
      line-height 1.5
      letter-spacing 0.5px
    pre
      font-family $type-mono

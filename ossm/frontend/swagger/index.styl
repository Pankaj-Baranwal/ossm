@require 'frontend'

.swagger-section
  #header
    background $yankees-blue


.swagger-section
  pre
    code
      display block
      padding 0.5em
      background #F0F0F0
    .markdown
      .emphasis
        font-style italic
    .nginx
      .built_in
        font-weight normal

  h1, h2, h3, h4
    margin 0

  .swagger-ui-wrap
    line-height 1
    margin-left auto
    margin-right auto
    p
      line-height 1.4em
      padding 0 0 10px
      color #333333

    ol
      margin 0px 0 10px
      padding 0 0 0 18px
      listtype decimal
      li
        padding 5px 0px
        font-size 0.9em
        color #333333
    pre
      font-family $type-mono
      background-color $jap-indigo
      // border 1px solid #e5e0c6
      border-radius 3px
      padding 10px
      code
        line-height 1.6em
        background none
    table
      border-collapse collapse
      border-spacing 0
      thead
        tr
          th
            padding 0 5px 5px 0
            border-bottom 1px solid alpha(#000, 0.2)
      tbody
        tr
          &:last-child
            td
              border-bottom none
          td
            padding 5px 5px 5px 0
            border-bottom 1px solid alpha(#000, 0.2)
      &.fullwidth
        width 100%
    .required
      font-weight bold

    h2
      font-size 1.3em
      margin 0
      padding 10px 0 10px 0
      a
        color black

    ul#resources
      font-family $type-mono
      font-size 0.9em
      li.resource
        border-bottom 1px solid #dddddd
        &:last-child
          border-bottom none
        div.heading
          display flex
          border 1px solid transparent
          justify-content space-between
          align-items center

          ul.options
            inline-list(10px)

          h2
            color #999999

        ul.endpoints
          li.endpoint
            ul.operations
              li.operation
                float none
                clear both
                overflow hidden
                display block
                margin 0 0 10px
                padding 0
                div.heading
                  float none
                  clear both
                  overflow hidden
                  display block
                  margin 0
                  padding 5px 10px
                  h3
                    display block
                    clear none
                    float left
                    width auto
                    margin 0
                    padding 0
                    line-height 1.1em
                    color black
                    span
                      margin 0
                      padding 0
                      &.path
                        padding-left 10px
                        a
                          color black
                          &.toggleOperation
                            &.deprecated
                              text-decoration line-through

                      &.http_method
                        a
                          text-transform uppercase
                          border none
                          display inline-block
                          width 50px
                    ul.options
                      overflow hidden
                      padding 0
                      display block
                      margin 6px 10px 0 0
                      li
                        margin 0
                        padding 2px 10px
                        a
                          text-decoration none
                        &.access
                          color black
                div.content
                  border-top none
                  padding 10px
                  // border-radius 0 0 4px 4px
                  margin -1px 0 20px

                  h4
                    margin 0 0 10px

                  div
                    &.sandbox_header
                      overflow hidden
                      display block
                      input.submit
                        padding 6px 8px

                    &.response
                      margin-top 20px
                      pre
                        color $gainsboro
                        font-family $type-mono
                        padding 10px
                        font-size 0.9em
                        max-height 400px
                        overflow-y auto
                methodprops = {
                  put: #c5862b,
                  head: #ffd20f,
                  delete: #a41e22,
                  post: #9b59b6,
                  patch: #e67e22,
                  get: #3498db,
                  options: #0f6ab4
                }
                for method, color in methodprops
                  &.{method}
                    > div
                      background-color tint(color, 60%)
                      border 1px solid shade(color, 10%)
                      h3, h4, a
                        color shade(color, 60%)
                      ul.options
                        li
                          color color
                          a
                            color color
                    .content
                      background-color tint(color, 80%)

  .footer
    display none
  #content_message
    margin 10px 15px
    font-style italic
    color #999999
  #message-bar
    min-height 30px
    text-align center
    padding-top 10px
  .swagger-collapse
    &:before
      content "-"
  .swagger-expand
    &:before
      content "+"
  .error
    outline-color #cc0000
    background-color #f2dede



.swagger-section
  .hljs, .hljs-subst
    color $jap-indigo

  .hljs-keyword,
  .hljs-attribute,
  .hljs-attr,
  .hljs-selector-tag,
  .hljs-meta-keyword,
  .hljs-doctag,
  .hljs-name
    color $arylid-yellow

  .hljs-built_in,
  .hljs-literal,
  .hljs-bullet,
  .hljs-code,
  .hljs-addition
    color $burnt-sierra

  .hljs-regexp,
  .hljs-symbol,
  .hljs-variable,
  .hljs-template-variable,
  .hljs-link,
  .hljs-selector-attr,
  .hljs-selector-pseudo
    color #BC6060

  .hljs-type,
  .hljs-string,
  .hljs-number,
  .hljs-selector-id,
  .hljs-selector-class,
  .hljs-quote,
  .hljs-template-tag,
  .hljs-deletion
    color $jungle-green

  .hljs-title,
  .hljs-section
    color #880000
    font-weight bold




ol, ul
  list-style none
  margin 0
  padding 0


@import url('https://fonts.googleapis.com/css?family=Inconsolata:400,700|Poppins:400,600')
@require 'frontend'

html, body
  background $gainsboro
  color $primary-dark
  margin 0
  padding 0
  font-family $type-regular

// Apply border-box
border-box-html()

body
  display flex
  flex-direction column
  min-height 100vh

  > header
    background $jungle-green
    color $primary-text

    > section
      init-container()

    > nav
      init-container()
      background $base

    abbr
      font-family $type-mono
      font-size 12px
      font-weight 300
      left 100%
      margin-left 5px
      opacity 0.8
      position absolute
      top 0

    nav
      width 100%
      position fixed
      box-shadow 0 0 20px 4px alpha(#000, 0.4)
      z-index 10
      div
        display flex
        align-items center
        justify-content space-between
        a
          reset-link()

        h1
          color $white
          margin 12px 0
          font-size 20px
          line-height 10px
          position relative
          span
            visibility hidden
            position absolute
          img
            height 20px

        > ul
          reset-ul()

          > li
            font-weight 300
            font-size smaller
            letter-spacing 1px
            margin-right 10px
            position relative

            &:last-child
              margin-right 0

            i.arrow.down
              icon-arrow(down, 12px, $primary-text, 2px)
              margin-bottom -2px
              display inline-block

            > a
              color $primary-text

              &:hover, &:active
                color $primary-text

            > ul
              bubble(top, right, $triangle-size: 5px)
              border 0
              border-radius 3px
              box-shadow 4px 4px 10px 1px alpha($deep-space, 0.1)
              color $deep-space
              list-style-type none
              padding 4px 0
              position absolute
              right 0
              top 25px
              z-index 100
              display none

              &.open
                display block

              a
                display block
                min-width 100px
                padding 2px 10px
                &:hover
                  background $primary
                  color $primary-text

  > main
    init-container()
    flex 1
    margin-top 44px
    background $white

  > footer
    section
      init-container()
      &.copyright
        background $prussian-blue
        color alpha($primary-text, 0.8)
        font-size 14px
        font-family $type-mono
        font-weight 300
        padding 5px 0
        letter-spacing 1px
        a
          link($primary-text)

        div
          display flex
          align-items center
          justify-content space-between
          flex-wrap wrap
          ul
            inline-list(10px)
            padding 10px 0
            li:not(:first-child)
              list-style-type none
              &:before
                content '*'
                margin-right 10px

            &.external
              a
                border none
              li:before
                margin-right 0px

a
  link($celadon-blue)

form
  max-width 400px
  label
    text-transform uppercase
    font-size 14px
    font-family $type-mono
    // flex-grow value
    // display block
    margin-bottom 2px

    & + input
      display block

    & + input[type='checkbox'], & + input[type='radio']
      display inline-block

button, input[type='submit'], .btn
  button()
  click-shrink()
  position relative
  outline none
  text-transform uppercase
  font-weight 300
  letter-spacing 1px

+html5-inputs()
  input($lavender-gray)
  color $rich-black
  width 100%
  padding 5px 10px

  &:disabled
    background lighten($lavender-gray, 70%)
    color darken($lavender-gray, 60%)

article.privacy
  max-width 700px
  margin-bottom 40px
  text-align justify

  blockquote
    background tint($celadon-blue, 80%)
    border-left 10px solid tint($celadon-blue, 20%)
    margin 10vh -20px 10vh -30px
    padding 10px 20px 15px
    p
      margin 0
    h3
      margin-top 0

  address
    font-family $type-mono
    font-style normal

  h4, h3
    margin-bottom 0px
  p, li
    margin 4px 0
    font-family $type-mono

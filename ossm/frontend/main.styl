@require 'frontend'

breakpoint = 620px

html, body
  background $gainsboro
  color $primary-dark
  margin 0
  padding 0
  font-family $type-regular

html
  font-size 14px
  @media (max-width breakpoint)
    font-size 11px
  @media (min-width 1200px)
    font-size 15px

// Apply border-box
border-box-html()

body
  display flex
  flex-direction column
  min-height 100vh

  > header
    background $jungle-green
    color $primary-text

    > section
      init-container()

    > nav
      init-container()
      background $base

    abbr
      font-family $type-mono
      font-size 10px
      font-weight 300
      left 100%
      margin-left 5px
      opacity .8
      position absolute
      top 0

  > main
    init-container()
    flex 1
    margin-top 44px
    background $white

nav.root
  width 100%
  position fixed
  z-index 10
  div
    display flex
    align-items center
    justify-content space-between
    a
      reset-link()

    h1
      color $white
      margin 12px 0
      font-size 20px
      line-height 10px
      position relative
      span
        visibility hidden
        position absolute
      img
        height 20px

    > ul
      reset-ul()

      > li
        font-weight 300
        font-size smaller
        letter-spacing 1px
        margin-right 10px
        position relative

        &:last-child
          margin-right 0

        > a
          color inherit

          &:hover, &:active
            color inherit

        > ul
          bubble(top, right, $triangle-size: 5px)
          border 0
          border-radius 3px
          box-shadow 0 0 10px 2px alpha($deep-space, .1)
          color $deep-space
          list-style-type none
          padding 4px 0
          position absolute
          right 0
          top 25px
          z-index 100
          display none

          &.open
            display block

          a
            display block
            min-width 100px
            padding 2px 10px
            &:hover
              background $primary
              color $primary-text

footer.root
  init-container()
  background $prussian-blue
  color alpha($primary-text, .8)
  font-size 12px
  font-family $type-mono
  padding 5px 0
  letter-spacing 1px

  a
    color inherit

  div
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap
    ul
      delimited-inline-ul('*', 10px)
      padding 8px 0

      &.external
        a
          border 0
        li:before
          margin-right 0

a
  link($celadon-blue)

  &:hover, &:active
    color inherit

form
  max-width 400px
  label
    text-transform uppercase
    // font-size 14px
    font-family $type-mono
    // flex-grow value
    // display block
    margin-bottom 2px

    & + input
      display block

    & + input[type='checkbox'], & + input[type='radio']
      display inline-block

button, input[type='submit'], .btn
  button()
  click-shrink()
  position relative
  outline 0
  text-transform uppercase
  font-weight 300
  letter-spacing 1px

+html5-inputs()
  input($lavender-gray)
  color $rich-black
  width 100%
  padding 5px 10px

  &:disabled
    background lighten($lavender-gray, 70%)
    color darken($lavender-gray, 60%)

article.privacy
  max-width 700px
  margin-bottom 40px

  blockquote
    background tint($celadon-blue, 80%)
    border-left 10px solid tint($celadon-blue, 20%)
    margin 10vh -20px 10vh -30px
    padding 10px 20px 15px
    p
      margin 0
    h3
      margin-top 0

  address
    font-family $type-mono
    font-style normal

  h4, h3
    margin-bottom 0
  p, li
    margin 4px 0
    font-family $type-mono

@require 'frontend'

char-size = 14px
line-spacing = 2px
visible-lines = 6

_real-line-height = char-size + line-spacing

set-type()
  font-size char-size
  line-height char-size
  font-weight 300
  font-family type-fira

section.terminal
  background $black
  color $white
  display flex
  flex-direction column
  justify-content flex-end
  padding (_real-line-height / 2) 10px
  position fixed
  z-index 100
  height 60px
  width 60px

  box-shadow 0 0 10px 2px alpha($black, .3)

  top 30%
  left 20px

  overflow hidden
  transition .2s
  set-type()

  &.visible
    height _real-line-height * (3 + visible-lines)
    width 500px
    ul
      opacity 1
    button
      height 20px
      width 20px

  button
    reset-input()
    background $black
    display block
    height 60px
    width 60px
    left 0
    position absolute
    top 0
    transition 0.1s
    z-index 10
    &:hover, &:focus
      background $red

  ul
    reset-list()
    flex-shrink 0
    max-height _real-line-height * visible-lines
    overflow scroll
    opacity 0
    transition 0.2s
    li
      margin line-spacing 0
      cursor default

  footer
    align-items center
    display flex
    flex-shrink 0
    span
      line-height 14px

  input
    reset-input()
    margin-left 5px
    cursor default

  pre
    margin 0
    set-type()

@require 'frontend'

set-type()
  font-size 14px
  font-weight 300
  font-family type-fira

section.terminal
  position fixed
  z-index 100
  bottom 0
  right 0
  background $black
  padding 2px 10px
  width 500px
  display flex
  flex-direction column
  justify-content flex-end
  height 120px

  button
    padding 0
    top 0
    left 0
    position absolute
    border-radius 0
    background transparent
    display block
    width 20px
    height 20px
    &:hover, &:focus
      background $red
  ul
    reset-list()
    margin-top 15px
    overflow scroll
    li
      margin 2px 0
  footer
    display flex
    flex-shrink 0
    align-items center
    set-type()
    span
      line-height 14px

    input
      background transparent
      padding 0
      set-type()
      margin-left 5px
      border none
      color #fff

      &:hover, &:active, &:focus
        border none
        box-shadow none
  pre
    margin 0
    set-type()

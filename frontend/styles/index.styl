@require './_colors'
@require './_mixins'
@require './_typeface'
@require 'axis'

html, body
  background $gainsboro
  color $primary-dark
  margin 0
  padding 0
  font-family $type-regular

// Apply border-box
border-box-html()

body
  display flex
  flex-direction column
  min-height 100vh

  > header
    init-container()
    background $base
    color $primary-text

    h1
      color $white
      margin 0

    a
      color inherit
      text-decoration none

    nav
      display flex
      align-items baseline
      justify-content space-between
      > ul
        reset-ul()

        > li
          font-weight 600
          letter-spacing 1px
          margin-right 10px
          position relative

          &:last-child
            margin-right 0

          i.arrow.down
            icon-arrow(down, 15px, $primary-text, 2px)
            margin-bottom -2px
            display inline-block

          > ul
            bubble(top, right, $triangle-size: 5px)
            border 0
            border-radius 3px
            box-shadow 4px 4px 10px 1px alpha($deep-space, 0.1)
            color $deep-space
            font-size smaller
            font-weight 300
            list-style-type none
            padding 4px 0
            position absolute
            right -50%
            top 100%
            z-index 100
            display none

            &.open
              display block

            a
              display block
              min-width 100px
              padding 2px 10px
              &:hover
                background $primary
                color $primary-text

  > main
    init-container()
    flex 1
    background $white

  > footer
    section
      init-container()

      &.copyright
        background $deep-space
        color $primary-text
        padding 5px 0

a
  // Global links reset
  color inherit
  text-decoration none

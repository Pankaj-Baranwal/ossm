@require 'frontend'
@require 'frontend/animate/fading_entrances/fadeInDown'
@require 'frontend/animate/fading_entrances/fadeInUp'

body
  > header
    position relative
    overflow hidden
    background $rich-black
    // nav
    //   display none

    > section
      height 100vh
      width 100vw
      flex-shrink 0
      flex-grow 0
      position relative

    section.hero
      .logo
        position absolute
        right 10%
        top 10%
        height 30vw
        width 30vw
        display flex
        background url('{!static!}/img/rad/radiation.png') no-repeat center center
        background-size cover
        align-items center
        justify-content center

      h2, h1
        margin 0
        position relative
        display inline

      @media(max-width 768px)
        abbr
          top 100%
          left 0

      form
        max-width 40%
        margin-top 50px

        @media(max-width 768px)
          max-width (768px * .8) * .4

        input
          display block
          margin-bottom 10px
        button
          padding 5px 10px
      img
        max-height 40px
        max-width 100%

    .backdrop
      height 100%
      z-index 2
      perspective 200px

    div[role='nav']
      button
        position fixed
        top 50vh
        z-index 90
        padding 20px 2px
        font-size 2em
        transform translateY(-50%)
        background transparent
        &:hover
          background alpha($white, .2)
      button.left
        left 0
      button.right
        right 0

  > main
    display none

  > footer
    position fixed
    bottom 0
    left 0
    right 0
    background lighten($prussian-blue, 20%)
    color $primary-text
    z-index 2
    .contact
      display none
    .info
      padding 10px 0
      img
        height 60px

div[role='slides']
  overflow hidden
  width 6 * 100vw
  margin-left 0
  height 100vh
  transition all .5s cubic-bezier(.175, .685, .32, 1)
  // background url('{!static!}/img/spacey.png') repeat fixed
  factr = .5 + .2
  background-size (758px * factr) (395px * factr)
  background-position 0 0
  position relative
  section
    width 100vw
    height 100vh
    flex-grow 1
    flex-shrink 0
    position relative
    display inline-block
    z-index 1

    &.active
      .event-content
        animation fadeInDown .5s

    canvas, svg, #chained
      position absolute
      top 0
      left 0
      z-index -1
      width 100vw
      height 100vh

#chained
  div
    width 10px
    height 10px
    margin 1px 0 0 1px
    float left
    background #eee
    display inline-block

.event-content
  position absolute
  top 0
  right 0
  width 500px
  height 500px
  margin-top 100px
  margin-right 100px

  > ul
    > li
      padding 10px

    display inline-flex
    list-style-type none

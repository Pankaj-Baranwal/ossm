@require 'frontend'
@require 'frontend/animate/fading_entrances/fadeInDown'
@require 'frontend/animate/fading_entrances/fadeInUp'

body
  > header
    position relative
    overflow hidden
    background $rich-black

    section.hero

      h1
        margin 0
        position relative
        display inline

      @media(max-width 768px)
        abbr
          top 100%
          left 0

      img
        max-height 40px
        max-width 100%


    div[role='nav']
      button
        position fixed
        top 50vh
        z-index 90
        padding 20px 2px
        font-size 2em
        transform translateY(-50%)
        background transparent
        &:hover
          background alpha($white, .2)
      button.left
        left 0
      button.right
        right 0

  > main
    display none

  > footer
    position fixed
    bottom 0
    left 0
    right 0
    background lighten($prussian-blue, 20%)
    color $primary-text
    z-index 2

    .contact
      display none
    .info
      padding 10px 0
      img
        height 60px

div[role='slides']
  overflow hidden
  width 6 * 100vw
  margin-left 0
  height 100vh
  transition all .5s cubic-bezier(.175, .685, .32, 1)
  // background url('{!static!}/img/spacey.png') repeat fixed
  factr = .5 + .2
  background-size (758px * factr) (395px * factr)
  background-position 0 0
  position relative
  display flex
  background #EBEBEB

  font-family type-sans-serif

  section
    width 100vw
    height 100vh
    flex-grow 1
    flex-shrink 0
    position relative
    display flex
    z-index 1
    // pointer-events none
    // cursor none
    padding 20px

    .event-content
      margin auto 30% auto 10%
      position relative
      padding 0 20px

      &:before
        position absolute
        top -100%
        bottom -100%
        content ' '
        width 100%
        left 0
        right 0
        z-index -1

    &.active
      .event-content
        animation fadeInDown .5s

  canvas, svg, #chained
    position fixed
    top 0
    left 0
    z-index 0
    width 100vw
    height 100vh


  section
    h2
      font-size 3rem
      font-weight 800
      text-transform uppercase
    p
      font-size 1.2rem
      line-height 1.5rem


  &[active='0']
    background #EBEBEB
    color #3A405A

    button
      color #3A405A

    h2
      span.em1
        font-size 4rem
        font-weight 700
        letter-spacing 2px
    // section > div
    //   &:before
    //     background alpha(shade(#B75D69, 50%), .4)


  &[active='1']
    background #004E98
    color #EBEBEB


  &[active='2']
    background #004E98
    color #000
    svg
      opacity .2
